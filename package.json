{
  "name": "darts-contracts",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "description": "Darts:decentralized FaaS (Function as a Service)",
  "author": "Hiro <laciferin@gmail.com>",
  "scripts": {
    "setup": "remixd -i slither",
    "print-env": "ts-node scripts/generate-addresses.ts",
    "gen-env": "npm run print-env | grep = > .env.gen",
    "print:env": "ts-node scripts/generate-addresses.ts",
    "print:contract": "hardhat run scripts/print-contract-env.ts --network ",
    "pkey": "node scripts/derive-pkey.js ",
    "postinstall": "npm run setup",
    "dev": "remixd",
    "style": "prettier -w .",
    "start": "hardhat node",
    "prebuild": "hardhat clean",
    "build": "hardhat compile",
    "postbuild": "hardhat typechain & (cd .. && go generate)",
    "build1": "export TS_NODE_TRANSPILE_ONLY=1 && echo 'run when hardhat fails due to insufficient types' && hardhat compile",
    "clean": "hardhat clean && rm -rf deployments",
    "hardhat:local": "hardhat node",
    "pkey": "hardhat pkey ",
    "test": "CONFIG=./.env.hardhat hardhat test",
    "deploy": "hardhat deploy --network ",
    "deploy:calibration": "hardhat deploy --network calibration",
    "deploy:sepolia": "rm -rf deployments/sepolia && hardhat deploy --network sepolia && hardhat fund --network sepolia",
    "deploy:chaos": "hardhat deploy --network chaos",
    "deploy:titanAI": "hardhat deploy --network titanAI",
    "task:accounts": "hardhat accounts",
    "task:balance": "hardhat balance --network calibration --account",
    "task:bal": "hardhat bal --network calibration",
    "task:networks": "hardhat networks",
    "task:deployAll": "hardhat deployAll --skip chaos,localhost ",
    "task:deployAll:parallel": "hardhat deployAll --parallel --skip haos,localhost ",
    "scripts:deployAll": "hardhat run scripts/deployAll.ts",
    "fund": "hardhat fund --network ",
    "drip": "hardhat drip --network ",
    "dapp": "hardhat dapp --network ",
    "bal": "hardhat bal --network ",
    "balance": "npm run bal"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.4",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@remix-project/remixd": "^0.6.24",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/bluebird": "^3.5.42",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.14",
    "bluebird": "^3.7.2",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.10",
    "minimist": "^1.2.8",
    "moment": "^2.30.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "solc": "0.8.15",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.5",
    "@openzeppelin/contracts-upgradeable": "^4.9.5",
    "dotenv": "^16.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=6.0.0",
    "pnpm": ">=8.6.6"
  },
  "packageManager": "pnpm@8.15.43",
  "repository": {
    "type": "git",
    "url": "https://github.com/darts-networks/darts"
  },
  "bugs": {
    "url": "https://github.com/darts-network/darts/issues"
  }
}
